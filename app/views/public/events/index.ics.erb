BEGIN:VCALENDAR
VERSION:2.0
CALSCALE:GREGORIAN
X-WR-CALNAME:TT村のイベントb
X-WR-TIMEZONE:Asia/Tokyo
BEGIN:VTIMEZONE
TZID:Asia/Tokyo
BEGIN:STANDARD
DTSTART:19700101T000000
TZOFFSETFROM:+0900
TZOFFSETTO:+0900
TZNAME:JST
END:STANDARD
END:VTIMEZONE
<% @events.each do |event| %>
BEGIN:VEVENT
UID:manabiya:event:<%= event.id %>
DTSTAMP:<%= event.updated_at.utc.strftime("%Y%m%dT%H%M%SZ") %>
DTSTART:<%= event.start_at.utc.strftime("%Y%m%dT%H%M%SZ") %>
DTEND:<%= (event.start_at + 1.hour).utc.strftime("%Y%m%dT%H%M%SZ") %>
SUMMARY:<%= event.title %>
DESCRIPTION:
LOCATION:<%= event.venue %>
URL:<%= event_url(event) %>
END:VEVENT
<% end %>
END:VCALENDAR
